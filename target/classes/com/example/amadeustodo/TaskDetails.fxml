<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.effect.Glow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="283.0" prefWidth="443.0" styleClass="body" stylesheets="@buttonHover.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.amadeustodo.TaskDetailsController">
   <children>
      <Label fx:id="taskTitle" layoutX="170.0" layoutY="43.0" text="Task Title" textFill="WHITE">
         <font>
            <Font name="Constantia" size="24.0" />
         </font>
      </Label>
      <Label fx:id="taskDeadline" contentDisplay="CENTER" layoutX="158.0" layoutY="186.0" prefHeight="30.0" prefWidth="153.0" text="Deadline" textAlignment="CENTER" textFill="WHITE">
         <font>
            <Font name="Gabriola" size="20.0" />
         </font>
      </Label>
      <Button fx:id="updateBtn" layoutX="54.0" layoutY="227.0" mnemonicParsing="false" onAction="#updateButtonPressed" text="Update">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
         <effect>
            <Glow />
         </effect>
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Button>
      <Button layoutX="338.0" layoutY="227.0" mnemonicParsing="false" onAction="#deleteButtonPressed" text="Delete">
         <effect>
            <Glow />
         </effect>
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Button>
      <Separator layoutX="55.0" layoutY="72.0" prefHeight="6.0" prefWidth="333.0" />
      <Label fx:id="taskDesc" layoutX="158.0" layoutY="130.0" text="Task Desc" textFill="WHITE">
         <font>
            <Font name="Constantia" size="18.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
